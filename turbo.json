{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "test"],
      "outputs": ["lib/**"]
    },
    "test": {
      "dependsOn": ["lint"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.js", "test/**/*.js"]
    },
    "lint": {
      "dependsOn": ["clean"],
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "publish": {
      "dependsOn": ["build", "test", "lint"],
      "outputs": []
    }
  }
}
